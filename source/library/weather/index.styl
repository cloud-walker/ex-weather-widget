.weather.widget
	$border-radius = .5rem
	$padding       = $border-radius * 2
	$mainColor     = hsl(188, 40, 96)

	@require './map'
	@require './front'

	background-color: $mainColor
	width           : 390px
	min-height      : 400px
	margin          : 0 auto
	margin-top      : 3rem
	border-radius   : $border-radius
	position        : relative
	transition      : transform .3s
	transform-style : preserve-3d
	perspective     : 1000
	font-family     : 'Source Sans Pro', sans-serif
	box-shadow: 0 5px 30px rgba(0, 0, 0, .3)

	@media screen and (max-width: 700px)
		width: @width - 100
		min-height: @min-height - 70

	&.flipped
		transform: rotateY(180deg)

	.flip.icon
		position  : absolute
		top       : $padding
		right     : @top
		cursor    : pointer
		font-size : $padding * 2
		opacity   : .2
		z-index   : 2
		transition: opacity .3s

		&:hover
			opacity: .5

	.face
		height             : 100%
		width              : @height
		box-sizing         : border-box
		position           : absolute
		top                : 0
		left               : @top
		backface-visibility: hidden

		&.front
			z-index: 2

		&.back
			transform: rotateY(180deg)
